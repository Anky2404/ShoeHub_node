<header>
    <div class="head-wrap">
        <div class="colleft">
            <div class="logo">
                <a href="/Supervisor/"> <img src="/backend/img/logo.png" alt="logo" title="logo"></a>
            </div>
        </div>
        <div class="colright">
            <h3>My Account<span><i class="fa fa-angle-down" aria-hidden="true"></i></span></h3>
            <div class="menu" style="display: none;">
                <ul>
                    <li><a href="/Supervisor/"><span>Logout</span></a></li>

                </ul>
            </div>
        </div>
    </div>
      <!-- Display success or error -->
   <% if (message) { %>
    <div class="alert <%= results %>" id="alertMessage">
        <%= message %>
    </div>
<% } %>
</header>

<script>

    // Function to hide alert messages after 5 seconds
    setTimeout(function() {
        // Get all elements 
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            alert.style.display = 'none';
        });
    }, 5000); 

    
</script>